<%= simple_form_for(@show) do |f| %>
  <% if @show.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@show.errors.count, "error") %> prohibited this show from being saved:</h2>

      <ul>
      <% @show.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="large-8 medium-8 large-centered medium-centered column">

    <div class="row">
      <%= f.input :venue, wrapper_html: { class: "large-8 medium-8 column" } %>
      <div class="large-4 medium-4 column">
        <%= f.label :date %>
        <%= f.date_field :date %>
      </div>
      <%= f.input :address, wrapper_html: { class: "large-12 medium-12 column" } %>
      <%= f.input :city, wrapper_html: { class: "large-6 medium-6 column" } %>
      <%= f.input :state, wrapper_html: { class: "large-6 medium-6 column" } %>
      <%= f.input :venue_phone, wrapper_html: { class: "large-4 medium-6 column" } %>
      <%= f.input :tickets_url, wrapper_html: { class: "large-8 medium-6 column" } %>
      <%= f.input :notes, wrapper_html: { class: "large-12 medium-12 column" } %>
      <div class="actions large-12 column"><%= f.button :submit, class: "medium radius" %></div>
    </div>
  </div>
<% end %>
